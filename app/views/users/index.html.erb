<%#= link_to 'New User', new_user_path %>


<div class="container">
  <div class="well">
    <%= link_to "New User", new_user_path, class: "btn btn-info" %>
  </div>
  <div class="new-product"></div>
  
  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Show</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
    </thead>
    <tbody class="product-index">
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= link_to '', user  , class: "btn btn-danger glyphicon glyphicon-eye-open"%></td>
        <td><%= link_to '', edit_user_path(user) , class: "btn btn-default glyphicon glyphicon-pencil"%></td>
        <td><%= link_to '', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger glyphicon glyphicon-remove"  %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
<div id="product-modal" class="modal fade"></div>
